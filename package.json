{
  "name": "stormtrooper",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "description": "Node MongoDB and Authentication",
  "author": "Pepeye",
  "scripts": {
    "dev": "DEBUG=stormtrooper* nodemon src/index.js --exec babel-node",
    "start": "NODE_ENV=production node src",
    "db:clean": "node build/tasks/cleandb",
    "db:seed": "node build/tasks/seed",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "test": "NODE_ENV=test jest --coverage --forceExit",
    "test:watch": "NODE_ENV=test jest --watch --coverage"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "eslint": "^3.15.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-babel": "^4.0.1",
    "eslint-plugin-flowtype": "^2.30.0",
    "eslint-plugin-promise": "^3.4.2",
    "eslint-plugin-standard": "^2.0.1",
    "flow-bin": "^0.39.0",
    "jest": "^18.1.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "supertest": "^3.0.0",
    "supertest-as-promised": "^4.0.2"
  },
  "dependencies": {
    "body-parser": "^1.16.1",
    "compression": "^1.6.2",
    "cors": "^2.8.1",
    "debug": "^2.6.1",
    "express": "^4.14.1",
    "helmet": "^3.4.0",
    "mongoose": "^4.8.3",
    "morgan": "^1.8.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "./dist"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "html"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "moduleNameMapper": {
      "^mongoose$": "<rootDir>/node_modules/mongoose"
    },
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "verbose": true
  }
}
